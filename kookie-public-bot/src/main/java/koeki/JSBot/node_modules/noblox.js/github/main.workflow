workflow "build and test" {
  on = "push"
  resolves = ["test"]
}

action "test" {
  uses = "actions/npm@master"
  args = "run test"
}

workflow "publish on release" {
  on = "release"
  resolves = ["publish"]
}

action "publish" {
  uses = "actions/npm@master"
  args = "publish"
  secrets = ["NPM_AUTH_TOKEN"]
}